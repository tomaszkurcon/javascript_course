doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        title Second Express application
        style.
            table {
                width: 100%;
            }
            table:nth-child(3) {
                margin-top:100px;
            }
            td {
                border: 1px solid #000; 
                padding: 15px;
                text-align: left;
            }
            th {
                background-color: #04AA6D;
                color: white;
            }
    body
        main
            h1 Second Express application
            table
                tr
                    th GET
                    th POST
                tr 
                    td 
                        form(method='GET' action='/submit')
                            label(for='name') Give your name
                            input(name='name')
                            br
                            input(type='submit')
                            input(type='reset')
                    td 
                        form(method='POST' action='/')
                            label(for='name') Give your name
                            input(name='name')
                            br
                            input(type='submit')
                            input(type='reset')
            table
                tr
                    th Nazwisko
                    th Imię
                    if students_list.length > 0 && students_list[0].faculty
                        th Wydział
                each student in students_list
                    tr 
                        td= student.lastname
                        td= student.name
                        if student.faculty
                            td= student.faculty
             
                
                    